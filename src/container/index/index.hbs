<form class="form" id="form">
    <img src="https://picsum.photos/1200/600" alt="Form image" class="form__image">

    <h1 class="form__title">
        Реєстрація користувача
    </h1>

    <div class="form__group">
        <label for="username" class="form__label">Ім'я користувача </label>
        <input type="text" id="username" class="form__input" name="username" required>
    </div>

    <div class="form__group">
        <label for="email" class="form__label">Email </label>
        <input type="email" id="email" class="form__input" name="email" required>
    </div>

    <div class="form__group">
        <label for="age" class="form__label">Age </label>
        <input type="number" id="age" class="form__input" name="age" required>
    </div>

    <div class="form__group">
        <label for="role" class="form__label">Оберіть роль </label>
        <select name="role" id="role" class="form__select" required>
            <option value="" disabled="" selected="">Роль</option>
            <option value="user">Користувач</option>
            <option value="admin">Адміністратор</option>
        </select>
    </div>

    <div class="form__group form__group--checkbox">
        <label for="agree" class="form__label">Відправляти повідомлення на email </label>
        <input type="checkbox" id="agree" name="agree" class="form__input" required>
    </div>
    <button class="form__button" type="submit">Зареєструвати </button>
</form>

